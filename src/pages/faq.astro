---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';
import FAQs from "../components/widgets/FAQs.astro";
import { getCollection } from "astro:content";
import { notionTextToString } from "../utils/utils";

const metadata = {
  title: 'FAQ',
};
const faqCollection = await getCollection('faq');
const faqItems = faqCollection.map((item) => {
  const {
    Name: title, answer
  } = item.data.properties;
  return {
    title: notionTextToString(title.title),
    description: notionTextToString(answer.rich_text),
  }
});
---

<Layout metadata={metadata}>
  <FAQs id="FAQ"
        title="Fragen und Antworten"
        subtitle="Hier findest Du Antworten auf hÃ¤ufig gestellte Fragen rund um die Bezahlkarte."
        tagline="FAQs"
        items={faqItems} 
        columns={1}>
  </FAQs>
  <CallToAction id="Weitere Informationen" title="Finde weiterreichende Informationen:"
    actions={[
      {
        variant: 'primary',
        text: 'Ressourcen',
        href: '/ressourcen',
        target: '_self',
        icon: 'tabler:book',
      },
      {
        variant: 'secondary',
        text: 'Termine',
        href: '/termine',
        target: '_self',
        icon: 'tabler:book',
      },
    ]}
  >
</Layout>
