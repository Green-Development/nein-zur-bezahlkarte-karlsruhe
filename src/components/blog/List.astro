---
import Item from '~/components/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<ul aria-label="Blogliste">
  {
    posts.map((post) => (
      <li class="mb-12 md:mb-20" aria-label={post.title}>
        <Item post={post} />
      </li>
    ))
  }
</ul>
